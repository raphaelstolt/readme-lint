#!/usr/bin/env php

<?php

use Stolt\ReadmeLint\Commands\LintCommand;
use Stolt\ReadmeLint\Commands\SpellcheckCommand;
use Stolt\ReadmeLint\Spellchecker;
use Symfony\Component\Console\Application;

$autoloaded = false;
$autoloads = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
];

foreach (\array_filter($autoloads, 'file_exists') as $autoload) {
    require $autoload;
    $autoloaded = true;
    break;
}

if (false === $autoloaded) {
   echo('You need to set up the project dependencies by running the following command:' . PHP_EOL .
       '> composer install' . PHP_EOL);
   exit(1);
}
const VERSION = '0.0.2';

$lintCommand = new LintCommand();
$spellcheckCommand = new SpellcheckCommand(new Spellchecker('./vendor/bin/peck'));

$application = new Application('readme-lint', VERSION);
$application->addCommands([$lintCommand, $spellcheckCommand]);
$application->run();

